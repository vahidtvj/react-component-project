  "repository": "git@github.com:vahidtvj/react-lib.git",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lib:build": "cd ./packages/mylibrary && yarn build",
    "lib:storybook": "cd ./packages/mylibrary && yarn storybook",
    "lib:build-storybook": "cd ./packages/mylibrary && yarn build-storybook",
    "demo:dev": "cd ./packages/demo && yarn dev",
    "demo:build": "cd ./packages/demo && yarn build",
    "demo:start": "cd ./packages/demo && yarn start",
    "demo:deploy": "cd ./packages/demo && yarn deploy",
    "format": "prettier --write .",
    "lint": "eslint .",
    "pre-commit": "yarn format && yarn lint",
    "lib:publish": "cd ./packages/mylibrary && npm publish"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "gh-pages": "^3.1.0",
    "husky": "^6.0.0",
    "prettier": "^2.2.1",
    "shx": "^0.3.3"
  }
